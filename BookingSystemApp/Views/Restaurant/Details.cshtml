@model BookingSystemApp.View_Models.RestaurantDetailsVM

@{
    ViewBag.Title = "Restaurant Details";
}

<div class="form-horizontal" style="margin-top: 5em; overflow: hidden;">
    <div class="row">
        <div class="col s3">
            @Html.LabelFor(model => model.Name, "Name")<br />
            @Html.DisplayFor(model => model.Name)
        </div>
        <div class="col s3">
            @Html.LabelFor(model => model.PhoneNo, "Phone No.")<br />
            @Html.DisplayFor(model => model.PhoneNo)
        </div>
    </div>

    <div class="row">
        <div class="col s3">
            @Html.LabelFor(model => model.AddressStreet, "Street")<br />
            @Html.DisplayFor(model => model.AddressStreet)
        </div>
        <div class="col s3">
            @Html.LabelFor(model => model.AddressTown, "Town")<br />
            @Html.DisplayFor(model => model.AddressTown)
        </div>
        <div class="col s3">
            @Html.LabelFor(model => model.AddressCounty, "County")<br />
            @Html.DisplayFor(model => model.AddressCounty)
        </div>
        <div class="col s3">
            @Html.LabelFor(model => model.AddressPostalCode, "Postal Code")<br />
            @Html.DisplayFor(model => model.AddressPostalCode)
        </div>
    </div>

    <div class="row" style="text-align:end;">
        <input type="button" value="Book Table" class="btn btn-primary dark-blue" onclick="location.href='@Url.Action("create", "booking", new { RestaurantId = Model.Id })'" />
    </div>
</div>

<hr />

<h4>Images</h4>
<div class="row">
    @foreach (var img in Model.ImageIds)
    {
        <div class="col s2">
            <img class="materialboxed responsive-img" src="@Url.Action("ImageFromId", new { id = img })" />
        </div>
    }
</div>

<hr/>

<h4>Menu</h4>
<div class="row">
    @foreach (var category in Model.MenuItems)
    {
        <div class="row" style="margin-top: 2em; overflow: hidden;">
            <h5>@category.Category.Name</h5>
            <table class="table">
                <tr>
                    <th></th>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Diet Info
                    </th>
                    <th>
                        Categories
                    </th>
                    <th>
                        Price
                    </th>
                </tr>
                @foreach (var menuItem in category.MenuItems)
                {
                    <tr>
                        <td>
                            <img class="materialboxed" src="@Url.Action("ImageFromId", new { id = menuItem.ImageId })" style="height: 5em;" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => menuItem.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => menuItem.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => menuItem.DietInfoS)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => menuItem.TypesS)
                        </td>
                        <td>
                            £@Html.DisplayFor(modelItem => menuItem.Price)
                        </td>
                    </tr>
                }
            </table>
        </div>
    }

    <script type="text/javascript">

        $(document).ready(function () {
            $('.materialboxed').materialbox();
        });

    </script>
</div>
