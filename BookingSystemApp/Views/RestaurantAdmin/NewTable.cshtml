@model BookingSystemApp.View_Models.TableVM

@{
    ViewBag.Title = "New Table";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.RestaurantId)

    <div class="form-horizontal" style="margin-top: 100px;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="input-field">
            @Html.EditorFor(model => model.TableNo, new { htmlAttributes = new { @class = "validate" } })
            @Html.LabelFor(model => model.TableNo, "Table Number")
            @Html.ValidationMessageFor(model => model.TableNo, "", new { @class = "text-danger" })
        </div>

        <div class="input-field">
            @Html.EditorFor(model => model.NoSeats)
            @Html.LabelFor(model => model.NoSeats, "No. Seats")
            @Html.ValidationMessageFor(model => model.NoSeats, "", new { @class = "text-danger" })
        </div>

        <div class="input-field">
            @Html.EditorFor(model => model.AdditionalNotes)
            @Html.LabelFor(model => model.AdditionalNotes, "Additional Notes")
            @Html.ValidationMessageFor(model => model.AdditionalNotes, "", new { @class = "text-danger" })
        </div>

        <div class="form-group" style="text-align:end;">
            <input type="button" value="Cancel" class="btn-flat" onclick="location.href='@Url.Action("Index")'" />
            <div style="text-align:end; display: inline-block; float: right;">
                <input type="submit" value="Create" class="btn btn-primary dark-blue" />
            </div>
        </div>
    </div>
}