@model BookingSystemApp.View_Models.RestaurantVM

@{
    ViewBag.Title = "Delete Restaurant";
}

<div class="form-horizontal" style="margin-top: 100px;">
    <p style="font-weight:bold; font-size: 1.2em">Are you sure you want to delete this record?</p>

    <div class="">
        @Html.LabelFor(model => model.Name, "Name")<br />
        @Html.DisplayFor(model => model.Name)
    </div><br />

    <div class="">
        @Html.LabelFor(model => model.PhoneNo, "Phone No.")<br />
        @Html.DisplayFor(model => model.PhoneNo)
    </div><br />

    <div class="">
        @Html.LabelFor(model => model.AddressStreet, "Street")<br />
        @Html.DisplayFor(model => model.AddressStreet)
    </div><br />

    <div class="">
        @Html.LabelFor(model => model.AddressTown, "Town")<br />
        @Html.DisplayFor(model => model.AddressTown)
    </div><br />

    <div class="">
        @Html.LabelFor(model => model.AddressCounty, "County")<br />
        @Html.DisplayFor(model => model.AddressCounty)
    </div><br />

    <div class="">
        @Html.LabelFor(model => model.AddressPostalCode, "Postal Code")<br />
        @Html.DisplayFor(model => model.AddressPostalCode)
    </div><br />

    Menu Items

    <div>
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Diet Information
                </th>
                <th>
                    Categories
                </th>
            </tr>

            @foreach (var menuItem in Model.MenuItems)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => menuItem.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => menuItem.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => menuItem.DietInfo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => menuItem.Types)
                    </td>
                </tr>
            }
        </table>
    </div><br />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <input type="button" value="Cancel" class="btn-flat" onclick="location.href='@Url.Action("Index")'" />
            <div style="text-align:end; display: inline-block; float: right;">
                <input type="submit" value="Confirm" class="btn btn-primary dark-blue" />
            </div>
        </div>
    }

</div>