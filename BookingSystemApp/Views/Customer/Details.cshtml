@model BookingSystemApp.View_Models.RegisterVM

@{
    ViewBag.Title = "Your Details";
}

<div class="form-horizontal" style="overflow: hidden;">
    <h5>Details</h5>

    <div class="row">
        @Html.LabelFor(model => model.Title, "Name")<br />
        @Html.DisplayFor(model => model.Title) @Html.DisplayFor(model => model.Forename) @Html.DisplayFor(model => model.Surname) 
    </div>

    <div class="row">
        @Html.LabelFor(model => model.Dob)<br />
        @Html.DisplayFor(model => model.Dob)
    </div>

    <div class="row">
        @Html.LabelFor(model => model.AddressStreet, "Address")<br />
        @Html.DisplayFor(model => model.AddressStreet),
        @Html.DisplayFor(model => model.AddressTown),
        @Html.DisplayFor(model => model.AddressCounty),
        @Html.DisplayFor(model => model.AddressPostalCode)
    </div>

    <div class="row">
        @Html.LabelFor(model => model.HomePhoneNo)<br />
        @Html.DisplayFor(model => model.HomePhoneNo)
    </div>

    <div class="row">
        @Html.LabelFor(model => model.WorkPhoneNo)<br />
        @Html.DisplayFor(model => model.WorkPhoneNo)
    </div>

    <div class="row">
        @Html.LabelFor(model => model.MobilePhoneNo)<br />
        @Html.DisplayFor(model => model.MobilePhoneNo)
    </div>

    <div class="row">
        @Html.LabelFor(model => model.Email, "Email")<br />
        @Html.DisplayFor(model => model.Email)
    </div>
</div>