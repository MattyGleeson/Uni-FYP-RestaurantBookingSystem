@model BookingSystemApp.View_Models.CompanyVM

@{
    ViewBag.Title = "About The Company";
}

<dl class="dl-horizontal">
    <dt>
        Name
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Name)
    </dd>

    <dt>
        Description
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Description)<br/>
    </dd>

    <dt>
        Address
    </dt>

    <dd>
        @Html.DisplayFor(model => model.AddressStreet)
        @Html.DisplayFor(model => model.AddressTown)
        @Html.DisplayFor(model => model.AddressCounty)
        @Html.DisplayFor(model => model.AddressPostalCode)
    </dd>

    <dt>
        Phone No
    </dt>

    <dd>
        @Html.DisplayFor(model => model.PhoneNo)
    </dd>

    <dt>
        Email
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Email)
    </dd>

    <dt>
        Total Number Of Restaurants
    </dt>

    <dd>
        @Html.DisplayFor(model => model.RestaurantCount)
    </dd>

</dl>
