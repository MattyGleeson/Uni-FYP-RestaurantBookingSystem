@model BookingSystemApp.View_Models.HomeDatePickerVM
@{
    ViewBag.Title = "Home";
}

<div class="row">
    <div class="col s6 offset-s3">
        @using (Html.BeginForm("Index", "Restaurant", FormMethod.Post, new { style = "margin-top: 5em;" }))
        {
            <div class="row">
                @Html.LabelFor(model => model.RestaurantId, "Restaurant")
                @Html.DropDownList("RestaurantId", null, "Select restaurant", htmlAttributes: new { @class = "browser-default" })
            </div>
            <div class="row" style="text-align:center">
                <input type="submit" value="Search Restaurants" class="btn btn-primary dark-blue" />
            </div>
        }
    </div>
</div>