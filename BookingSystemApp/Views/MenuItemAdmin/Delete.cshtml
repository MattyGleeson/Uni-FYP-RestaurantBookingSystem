@model LibBookingService.Dtos.MenuItem

@{
    ViewBag.Title = "Delete Menu Item";
}

<div class="form-horizontal" style="margin-top: 100px;">
    <p style="font-weight:bold; font-size: 1.2em">Are you sure you want to delete this record?</p>

    <div class="row">
        @Html.LabelFor(model => model.Name, "Name")<br />
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="row">
        @Html.LabelFor(model => model.Description, "Description")<br />
        @Html.DisplayFor(model => model.Description)
    </div>

    <div class="row">
        @Html.LabelFor(model => model.Price, "Price")<br />
        £@Html.DisplayFor(model => model.Price)
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <input type="button" value="Cancel" class="btn-flat" onclick="location.href='@Url.Action("Index")'" />
            <div style="text-align:end; display: inline-block; float: right;">
                <input type="submit" value="Confirm" class="btn btn-primary dark-blue" />
            </div>
        </div>
    }

</div>